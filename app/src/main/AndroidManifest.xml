<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vb.mycash">
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddCash"
            android:screenOrientation="portrait"/>
        <activity android:name=".RemoveCash"
            android:screenOrientation="portrait"/>
        <activity android:name=".BalanceCash"
            android:screenOrientation="portrait"/>
        <activity android:name=".ListFromDB"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditCategorie"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditCash"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>